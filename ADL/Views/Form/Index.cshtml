
@model ADL.Models.FormValues

@{
    ViewBag.Title = "Index";
}

@{
    var csharpVarieable = "Help me, I'm trapped in your screen D: ";
}
<div class="col-lg-12">
    <div class="jumbotron form-container">
        <h2>@csharpVarieable</h2>
    </div>

    <div class="form-container">
        @using (Html.BeginForm("Submit", "Form", FormMethod.Post))
        {
            <div>
                @Html.TextBoxFor(model => model.FirstName, new
                {
                    id = "firstname",
                    @class = "form-control",
                    type = "text",
                    autocomplete = "off",
                    placeholder = "Förnamn"
                })

            </div>
            <div>
                @Html.TextBoxFor(model => model.Town, new
                {
                    id = "Town",
                    @class = "form-control",
                    type = "text",
                    autocomplete = "off",
                    placeholder = "Hemstad"
                })
            </div>
            <div>
                @Html.TextBoxFor(model => model.Country, new
                {
                    id = "Country",
                    @class = "form-control",
                    type = "text",
                    autocomplete = "off",
                    placeholder = "Hemland"
                })
            </div>
            <div>
                @Html.TextBoxFor(model => model.Age, new
                {
                    id = "Age",
                    @class = "form-control",
                    type = "number",
                    autocomplete = "off",
                    placeholder = "Ålder"
                })
            </div>
            <div>
                @Html.TextBoxFor(model => model.FavoriteColor, new
                {
                    id = "FavoriteColor",
                    @class = "form-control",
                    type = "text",
                    autocomplete = "off",
                    placeholder = "Din favoritfärg"
                })
            </div>


            <div class="row">
                <br />
                <button type="submit" class="btn btn-primary btn-block " id="button" name="LoginButton" value="sendform" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i>Var god vänta">
                    Skicka
                </button>
            </div>

        }
    </div>
</div>
<script src="//code.jquery.com/jquery-3.2.1.js"></script>
<script type="text/javascript">
    $(function () {
        $('#FavoriteColor').colorpicker({
            useAlpha: false,
            horizontal: true,
            format: "rgb"
        });
    });
</script>